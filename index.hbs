{{!< default}}
<div class="module-article inner" role="main">
    {{#foreach posts}}
        <article class="{{post_class}}">
            <header>
                <span class="author image rounded size-50 mr-15 border-highlight block-left">
                    <img src="{{author.image}}" align="left" width="50">
                </span>
                <h2 class="title">
                    <a href="{{url}}">{{title}}</a>
                </h2>
                <div class="meta">
                    <div class="user">
                        By <a href="mailto:{{author.email}}">{{author}}</a>
                    </div>
                </div>
            </header>
            <hr>
            <section class="info">
                <span class="item">
                    <i class="fa fa-clock-o"></i> <time datetime="{{date format='YYYY-MM-DD'}}">{{date}}</time>
                </span>
                <span class="item">
                    <i class="fa fa-tags"></i> {{tags}}
                </span>
                <span class="ttr item">
                    <i class="fa fa-eye"></i> <span class="value"></span> minutes
                </span>
            </section>
            <section class="content hide">
                {{content}}
            </section>
            <section class="excerpt mt-25">
                <p>{{excerpt}}&hellip;</p>
                <a class="btn small" href="{{slug}}">Read more</a>
            </section>
        </article>
    {{/foreach}}
</div>

{{pagination}}